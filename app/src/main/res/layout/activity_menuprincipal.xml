<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="124dp"
        android:fontFamily="sans-serif"
        android:text="@string/bienvenido_admin"
        android:textColor="#EE140A"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:background="#EE140A"
        android:backgroundTint="#00F6F2F2"
        android:text="@string/qu_quieres_hacer"
        android:textAlignment="center"
        android:textColor="#B5EE140A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.062"
        tools:ignore="TextContrastCheck,TextSizeCheck" />

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#EE140A"
        android:onClick="logOutAction"
        android:text="@string/cerrar_sesi_n"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EE140A"
        android:textColorLink="#EE140A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToBtn"
        app:layout_constraintVertical_bias="0.416"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/recuperarBtn"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#EE140A"
        android:onClick="recuperarAction"
        android:text="@string/recuperar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EE140A"
        android:textColorLink="#EE140A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.542"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/guardarBtn"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#EE140A"
        android:onClick="guardarAction"
        android:text="@string/guardar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EE140A"
        android:textColorLink="#EE140A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.401"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/eliminarBtn"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#EE140A"
        android:onClick="eliminarAction"
        android:text="@string/eliminar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EE140A"
        android:textColorLink="#EE140A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.672"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/goToBtn"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#EE140A"
        android:onClick="activityAdminAction"
        android:text="@string/ver_usuarios"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EE140A"
        android:textColorLink="#EE140A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eliminarBtn"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="TextContrastCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/direccionTextView"
        android:layout_width="247dp"
        android:layout_height="61dp"
        android:hint="@string/calle_n_mero_piso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.055"
        tools:ignore="MissingConstraints"
        android:inputType="text"        android:autofillHints="" />

    <EditText
        android:id="@+id/telefonoTextView"
        android:layout_width="241dp"
        android:layout_height="57dp"
        android:hint="@string/tel_fono"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direccionTextView"
        app:layout_constraintVertical_bias="0.043"
        android:autofillHints="" />


</androidx.constraintlayout.widget.ConstraintLayout>